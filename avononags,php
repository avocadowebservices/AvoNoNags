<?php
/**
 * Plugin Name: AvoNoNags – WooCommerce Notice Blocker
 * Plugin URI: https://avocadoweb.net/plugins/avononags
 * Description: Removes and blocks WooCommerce admin notices. Peaceful dashboards only.
 * Version: 1.0.0
 * Author: Joseph Brzezowski
 * Author URI: https://avocadoweb.net
 * License: GPL2
 */

defined('ABSPATH') || exit;

// Remove WooCommerce and other plugin admin notices
add_action('admin_init', function () {
    remove_all_actions('admin_notices');
    remove_all_actions('all_admin_notices');
});
